{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-0ebdd976",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "cio-{{user `build`}}-c7xl3"
  }
],
"provisioners": [{
    "type": "shell",
    "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
    "inline": [
      "sleep 30",
      "echo '%sudo    ALL=(ALL)  NOPASSWD:ALL' >> /etc/sudoers",
      "yum -y install wget",
      "sudo wget ftp://download.storidge.com/pub/free/c7xl3/cio-{{user `build`}}-c7xl3.amd64.txz",
      "sudo tar xvf cio-{{user `build`}}-c7xl3.amd64.txz",
      "sudo -i",
      "cd /home/centos/cio-{{user `build`}}-c7xl3.amd64",
      "./install",
      "sed -ie '$d' /etc/sudoers"
    ]
  }]
}

{
  "variables": {
    "api_token": ""
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{ user `api_token` }}",
    "region": "sfo2",
    "image": "ubuntu-16-04-x64",
    "size": "512mb",
    "private_networking": true,
    "snapshot_name": "cio-{{user `build`}}-u16",
    "ssh_username": "root"
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
    "inline": [
      "echo '%sudo    ALL=(ALL)  NOPASSWD:ALL' >> /etc/sudoers",
      "sudo bash",
      "sudo wget ftp://download.storidge.com/pub/free/u16/cio-{{user `build`}}-u16.amd64.txz",
      "sudo tar xvf cio-{{user `build`}}-u16.amd64.txz",
      "sudo -i",
      "cd cio-{{user `build`}}-u16.amd64/",
      "./install",
      "sed -ie '$d' /etc/sudoers"
    ]
  }]
}
